include ../mixins/_mixins.pug

- var sliderItems = [{number: 0, image: 'slide1.jpg', header: 'Take your journal into the digital age', description: 'Publishing and journal writing becomes powerful, engaging communication through our services.'}, {number: 1, image: 'slide2.jpg', header: 'Take your journal into the digital age', description: 'Publishing and journal writing becomes powerful, engaging communication through our services.'}, {number: 2, image: 'slide3.jpg', header: 'Take your journal into the digital age', description: 'Publishing and journal writing becomes powerful, engaging communication through our services.'}]

.header__menu
  .container
    nav(class="navbar navbar-expand-lg pr-0 pl-0")
      a(class="navbar-brand" href="#")
        img.header__menu-logo(src="assets/img/logo.jpg", alt="site-logo")
      button(class="navbar-toggler header__menu-navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation")
        span(class="header__menu-navbar-toggler-icon")
        span(class="header__menu-navbar-toggler-icon")
        span(class="header__menu-navbar-toggler-icon")
      div.header__menu-navbar(class="collapse navbar-collapse flex-row-reverse" id="navbarNavAltMarkup")
        div(class="navbar-nav")
          a.header__menu-navbar-item(class="nav-item nav-link active" href="#") Publishers & Journals
            span(class="sr-only") (current)
          a.header__menu-navbar-item(class="nav-item nav-link" href="#") Universities
          a.header__menu-navbar-item(class="nav-item nav-link" href="#") Research Groups
          a.header__menu-navbar-item(class="nav-item nav-link" href="#") Clients & results
          a.header__menu-navbar-item(class="nav-item nav-link" href="#") Learning Zone
          a.header__menu-navbar-item(class="nav-item nav-link" href="#") About Us
          a.header__menu-navbar-item(class="nav-item nav-link" href="#") Contact Us
  .header__slider
    div(id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" data-touch="true")
      ol.header__slider-indicators(class="carousel-indicators")
        each item in sliderItems
          +sliderIndicator(item)
      div.header__slider-slides(class="carousel-inner")
        each item in sliderItems
          +sliderItem(item)
      a(class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev")
        span(class="carousel-control-prev-icon" aria-hidden="true")
        span(class="sr-only") Previous
      a(class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next")
        span(class="carousel-control-next-icon" aria-hidden="true")
        span(class="sr-only") Next